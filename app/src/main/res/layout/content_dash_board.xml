<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dash_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.wistem.com.cybe.DashBoardActivity"
    tools:showIn="@layout/activity_dash_board">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/linearlayoutsplash"
            android:layout_width="match_parent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Welcome to your dashboard! using the following menu, you can file a complaint and let us help you. Your information is secure with us."
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#838383"
            android:background="@drawable/border_white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginBottom="16dp"

            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


    <GridLayout
        android:id="@+id/grid_layout_keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:columnCount="2"
        android:foregroundGravity="center"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:rowCount="3"
        android:rowOrderPreserved="false"
        android:textAlignment="center"
        android:scrollIndicators="none"

        >




            <Button
                android:id="@+id/textViewnewsEmergencyCallList"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_width="110dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:padding="2dp"
                android:layout_height="80dp"
                android:text="Emergency Call List"
                android:background="@drawable/purple_border"
                android:textSize="16sp"
                />


            <Button
                android:id="@+id/textViewreport"
                android:layout_width="110dp"
                android:padding="2dp"
                android:layout_marginBottom="12dp"
                android:layout_height="80dp"
                android:text="Report Cyber Harassment"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/purple_border"
                android:textStyle="normal"
                android:textSize="16sp"

                 />

            <Button
                android:id="@+id/textViewnewsEnterForum"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_width="110dp"
                android:padding="2dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="8dp"
                android:layout_height="80dp"
                android:text="Enter Our Forum"
                android:background="@drawable/purple_border"
                android:textSize="16sp"
                />


        <Button
                android:id="@+id/textViewnotificationSetting"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_width="110dp"
                android:padding="2dp"
                android:layout_marginBottom="12dp"
                android:layout_height="80dp"
                android:text="Notification and Settings"
                android:background="@drawable/purple_border"
                android:textSize="16sp"
                />


            <Button
                android:id="@+id/textViewVisitFaceBook"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_width="110dp"
                android:padding="4dp"
                android:layout_marginRight="8dp"
                android:layout_height="80dp"
                android:text="Visit facebook page"
                android:background="@drawable/purple_border"
                android:textSize="16sp"
                />

        <Button
            android:id="@+id/textViewnewsFeed"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_width="110dp"
            android:padding="2dp"
            android:layout_height="80dp"
            android:text="Check news Feed"
            android:background="@drawable/purple_border"
            android:textSize="16sp"
            />


    </GridLayout>

    </ScrollView>

</LinearLayout>
